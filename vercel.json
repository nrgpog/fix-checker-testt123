{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/basic/check",
      "methods": ["POST"],
      "dest": "index.js"
    },
    {
      "src": "/api/pro/check",
      "methods": ["POST"],
      "dest": "index.js"
    },
    {
      "src": "/api/luhn/check",
      "methods": ["POST"],
      "dest": "index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/gen(\\.html)?",
      "dest": "/public/gen.html"
    },
    {
      "src": "/(styles\\.min\\.css|script\\.min\\.js)",
      "dest": "/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/chk.html"
    }
  ]
}
